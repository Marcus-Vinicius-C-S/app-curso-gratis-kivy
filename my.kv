<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        # Imagem de fundo
        Image:
            source: "img/tecnologia.jpg" 
            allow_stretch: True
            keep_ratio: False
            size: root.width, root.height

        Label:
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            bold: True
            pos_hint: {"x": 0.1, "top": 0.95}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            bold: True
            multiline: False
            pos_hint: {"x": 0.4, "top": 0.9}
            size_hint: 0.55, 0.05

        Label:
            text: "Senha: "
            font_size: (root.width**2 + root.height**2) / 13**4
            bold: True
            pos_hint: {"x": 0.1, "top": 0.8}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            bold: True
            multiline: False
            password: True
            pos_hint: {"x": 0.4, "top": 0.75}
            size_hint: 0.55, 0.05

        Button:
            pos_hint: {"x": 0.4, "y": 0.55}
            size_hint: 0.55, 0.1
            font_size: (root.width**2 + root.height**2) / 12**4
            bold: True
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint: {"x": 0.4, "y": 0.4}
            size_hint: 0.55, 0.1
            font_size: (root.width**2 + root.height**2) / 12**4
            bold: True
            text: "Criar Conta"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()



<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols: 1

        canvas.before:
            Color:
                rgba: (240/255, 242/255, 245/255, 1)  # Cor de fundo #F0F2F5
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Criar uma conta"
                font_size: 2 * ((root.width**2 + root.height**2) / 14**4)
                bold: True
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                color: 0, 0, 0, 1

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                color: 0, 0, 0, 1

            TextInput:
                pos_hint: {"x":0.35, "top":0.77}
                size_hint: 0.6, 0.05
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
                color: 0, 0, 0, 1

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                color: 0, 0, 0, 1

            TextInput:
                pos_hint: {"x":0.35, "top":0.63}
                size_hint: 0.6, 0.05
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
                color: 0, 0, 0, 1

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.77-0.13*2}
                text: "Senha: "
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                color: 0, 0, 0, 1

            TextInput:
                pos_hint: {"x":0.35, "top":0.47}
                size_hint: 0.6, 0.05
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**3) / 14**4
                color: 0, 0, 0, 1

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            bold: True
            text: "JÃ¡ tem uma conta?\n Voltar ao Log In"
            halign: "center"
            valign: "middle"
            text_size: self.size
            on_release:
                root.manager.transition.direction = "left"
                root.login()
            background_color: (11/255, 94/255, 215/255, 1)

        Button:
            pos_hint:{"x":0.3,"y":0.1}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            bold: True
            text: "Enviar"
            halign: "center"
            valign: "middle"
            text_size: self.size
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
            background_color: (11/255, 94/255, 215/255, 1)



<MainWindow>:
    n: n
    email: email
    created:created

    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Sair"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"